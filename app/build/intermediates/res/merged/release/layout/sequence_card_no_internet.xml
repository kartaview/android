<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/no_internet_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/no_internet_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/no_internet_image_view"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="No internet connection"
            android:textColor="@color/text_colour_default"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/no_internet_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_cloud_off_white_36dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>