<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1B1C1F">

    <LinearLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toEndOf="@+id/track_details"
        android:layout_toRightOf="@+id/track_details"
        android:orientation="vertical"
        android:weightSum="3">

        <FrameLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/cancel_text_camera_preview"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:clickable="false"
                app:srcCompat="@drawable/vector_home_white"
                android:textColor="@color/text_colour_default"
                android:textSize="26sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/shutter_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btn_shutter"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/vector_button_record_inactive_2" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/info_button_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/info_button_image"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/vector_info_white">

            </ImageView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/track_details"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="44dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="5"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/recording_taken_images"
            android:layout_width="54dp"
            android:layout_height="0dp"
            android:layout_weight="1.66"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/camera_taken_images"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/vector_camera_white" />

            <TextView
                android:id="@+id/images_recorded_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:lines="1"
                android:text="0"
                android:textColor="@color/text_colour_default"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/images_recorded_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:text="IMG"
                android:textColor="@color/gray_text_color"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.01"
            android:background="#3B3E47">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recording_saved_mb"
            android:layout_width="54dp"
            android:layout_height="0dp"
            android:layout_weight="1.66"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_recording_size"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/vector_size_white" />

            <TextView
                android:id="@+id/size_recorder_images_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:lines="1"
                android:text="0"
                android:textColor="@color/text_colour_default"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/size_recorder_images_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:text="MB"
                android:textColor="@color/gray_text_color"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.01"
            android:background="#3B3E47">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recording_distance_covered"
            android:layout_width="54dp"
            android:layout_height="0dp"
            android:layout_weight="1.66"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/distance_covered_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/vector_distance_white" />

            <TextView
                android:id="@+id/distance_covered_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:lines="1"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/distance_covered_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:text="KM"
                android:textColor="@color/gray_text_color"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>


