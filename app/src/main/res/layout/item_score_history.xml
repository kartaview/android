<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="17dp"
    android:paddingBottom="17dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_track_breakdown_column1"
        style="@style/trackBreakdownItemStyleStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/default_value_0"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/text_track_breakdown_column2"
        style="@style/trackBreakdownItemStyleStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/default_value_0"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/text_track_breakdown_column3"
        style="@style/trackBreakdownItemStyleStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/default_value_0"
        android:textColor="@color/white" />
</FrameLayout>