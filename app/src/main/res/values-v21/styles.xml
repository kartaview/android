<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
        <item name="android:windowContentTransitions">false</item>
        <item name="colorControlHighlight">@color/ripple_gray_light</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/fade</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorAccent">@color/default_purple</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="preferenceTheme">@style/PreferenceScreen</item>
    </style>

    <style name="PreferenceScreen" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/default_black</item>
        <item name="android:textColorSecondary">@color/settings_text_color_secondary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/fade</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorAccent">@color/default_purple</item>
        <item name="actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="AppThemeLogin" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen_background</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/md_grey_900</item>
    </style>

    <style name="AlertDialogIssueReport" parent="AppCompatAlertDialogStyleDark">
        <item name="colorPrimary">@color/default_white</item>
        <item name="colorPrimaryDark">@color/default_white</item>
        <item name="colorAccent">@color/default_blue</item>
    </style>

    <style name="SettingsAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/default_blue</item>
    </style>

    <style name="AppCompatAlertDialogStyleLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/default_purple</item>
        <item name="android:textColorPrimary">@color/default_white</item>
        <item name="android:background">@color/md_grey_900</item>
    </style>

    <style name="AppCompatAlertDialogStyleDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/default_purple</item>
        <item name="android:textColorPrimary">@color/default_gray_darkest</item>
        <item name="android:background">@color/default_white</item>
    </style>

    <style name="textStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/default_white</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textStyle.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/default_gray_darkest</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="toolbarButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/default_purple</item>
    </style>

    <style name="EditText.Report" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/issue_report_text_gray</item>
        <item name="android:colorAccent">@color/default_blue</item>
        <item name="android:textCursorDrawable">@color/default_blue</item>
        <item name="android:backgroundTint">@color/default_blue</item>
        <item name="colorAccent">@color/default_blue</item>
        <item name="android:colorControlNormal">@color/md_grey_900</item>
        <item name="colorControlNormal">@color/md_grey_900</item>
        <item name="android:colorControlActivated">@color/default_blue</item>
        <item name="colorControlActivated">@color/default_blue</item>
    </style>

    <style name="PreviewButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/default_white</item>
        <item name="colorButtonNormal">@color/default_white</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/settings_accent_green</item>
        <item name="colorSwitchThumbNormal">@color/default_white</item>
        <item name="android:colorForeground">@color/default_gray_darker</item>
    </style>
</resources>
