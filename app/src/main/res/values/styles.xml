<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="windowActionBarOverlay">true</item>-->
        <!--<item name="windowActionModeOverlay">true</item>-->
        <!--<item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>-->
        <item name="android:windowAnimationStyle">@null</item>
        <!--<item name="android:windowActionModeOverlay">true</item>-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowFullscreen">false</item>-->
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="colorPrimary">@color/darker_grey</item>
        <item name="colorPrimaryDark">@color/darker_grey</item>
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
        <item name="colorAccent">@color/accent_material_dark_1</item>
        <item name="android:windowActionBar">false</item>
        <item name="actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowActionBarOverlay">true</item>-->
        <!--<item name="windowActionModeOverlay">true</item>-->
        <!--<item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>-->
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!--<item name="android:windowActionModeOverlay">true</item>-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowFullscreen">false</item>-->
        <item name="colorPrimary">@color/darker_grey</item>
        <item name="colorPrimaryDark">@color/darker_grey</item>
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
        <item name="colorAccent">@color/accent_material_dark_1</item>
        <item name="android:windowActionBar">false</item>
        <item name="actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light"></style>

    <style name="AppTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/darker_grey</item>
    </style>

    <!-- Base theme applied no matter what API -->
    <style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary_dark_material_dark_1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent_material_dark_1</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/background_material_dark_1</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">?android:attr/actionBarSize</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="positionMeFAB" parent="@style/fab">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:src">@drawable/ic_gps_fixed_white_24dp</item>
    </style>


    <style name="settingsFAB" parent="@style/fab">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:src">@drawable/ic_backup_white_24dp</item>
    </style>

    <style name="sequencesFab" parent="@style/fab">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:src">@drawable/ic_backup_white_24dp</item>
    </style>

    <style name="AlertDialog" parent="AppCompatAlertDialogStyle">
        <item name="colorPrimary">@color/primary_dark_material_dark_1</item>
        <item name="colorPrimaryDark">@color/background_material_dark_1</item>
        <item name="colorAccent">@color/accent_material_dark_1</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent_material_dark_1</item>
        <item name="android:textColorPrimary">@color/text_colour_default</item>
        <item name="android:background">@color/background_material_dark_1</item>
    </style>

    <style name="ToolbarBottomSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@drawable/dropshadow</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textViewStyle">@style/textStyle</item>
    </style>

    <style name="textStyle.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_colour_default_light</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="buttonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_colour_default</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_colour_default</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textStyleNoSize" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_colour_default</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="toolbarButtonStyle">
        <item name="android:background">@null</item><!--todo make ripple on pre lollipop -->
    </style>

    <style name="hlv_listViewStyle"></style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent_material_dark_1</item>
    </style>
</resources>
